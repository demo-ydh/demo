<view class="container"><scroll-view class="record-list" scroll-y="{{true}}"><block wx:if="{{$root.g0===0}}"><view class="empty-tip"><text>暂无导航记录</text></view></block><block wx:for="{{$root.l0}}" wx:for-item="record" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['viewRecordDetails',['$0'],[[['records','',index]]]]]]]}}" class="record-item" bindtap="__e"><view class="record-header"><text class="record-time">{{record.m0}}</text><text class="record-mode">{{record.m1}}</text></view><view class="{{['record-map',(staticMapUrls[index])?'map-loaded':'']}}"><block wx:if="{{staticMapUrls[index]}}"><image class="map-image" src="{{staticMapUrls[index]}}" mode="aspectFill"></image></block><block wx:else><view class="map-loading"><text>地图加载中...</text></view></block></view><view class="record-route"><view class="route-point start"><text class="point-icon">📍</text><text class="point-name">{{record.$orig.data.startPoint.name||'当前位置'}}</text></view><view class="route-line"></view><view class="route-point end"><text class="point-icon">🏁</text><text class="point-name">{{record.$orig.data.endPoint.name}}</text></view></view><view class="record-info"><text class="record-duration">{{"持续时间: "+record.m2}}</text><text class="record-points">{{"途经点: "+record.g1+" 个"}}</text></view></view></block></scroll-view></view>